@model GreenElectric.EE.Servicios.Permisos.Patente

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <link href="~/Content/modern-business.css" rel="stylesheet" />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div >
        <h4 style="color:white">Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
            <div >
                <h5 class="text-justify"style="color:white">Usuario</h5>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            
            <div >
                <h5 class="text-justify"style="color:white">Contraseña</h5>
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <h6 style="color:darkred">Usuario y/o Contraseña Incorrecta </h6>
        <div class="form-group">
            <div class="col-md-offset-2" >
                <input type="button" class="BotonAzul " style="float:right" value="Login" onclick="location.href='@Url.Action("Index", "Patente")'" />
       
            </div>
        </div>
    </div>
}

